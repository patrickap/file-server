#----------------------------------------sftpgo----------------------------------------
# https://github.com/drakkan/sftpgo/blob/main/sftpgo.json
SFTPGO_HTTPD__BINDINGS__0__PORT=8080
SFTPGO_SFTPD__BINDINGS__0__PORT=2022
SFTPGO_WEBDAVD__BINDINGS__0__PORT=10080

#-----------------------------------------ocis-----------------------------------------
# set ocis url
OCIS_URL="https://ocis.cloud.local"

# set admin password
IDM_ADMIN_PASSWORD=<ADMIN_PASSWORD>

# use self-signed certificates
OCIS_INSECURE=true

# disable tls because the reverse proxy
# is handling it on demand
PROXY_TLS=false

# set log level to info
OCIS_LOG_LEVEL=info

# enable webdav access
PROXY_ENABLE_BASIC_AUTH=true

# TODO: set data path to external disk to prevent ocis from becoming unresponsive
# https://doc.owncloud.com/ocis/next/deployment/general/general-info.html#define-the-infinite-scale-data-path
# OCIS_BASE_DATA_PATH=...